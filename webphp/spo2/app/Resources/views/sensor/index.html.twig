{% extends 'layout/layout.html.twig' %}
{% block title %}
<title>Sensor | Index</title>
{% endblock %}
{% block custom_js %}

{% endblock%}
{% block main_body %}
 <div class="page-wrapper">

	<div class="container-fluid">

		  <!-- Page Heading -->
		  <div class="row">
		      <div class="col-lg-12">
		          <h1 class="page-header">
		              My Sensors
		          </h1>
		          <ol class="breadcrumb">
		              <li>
		                  <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
		              </li>
		              <li class="active">
		                  <i class="fa fa-edit"></i> Forms
		              </li>
		          </ol>
		      </div>
		  </div>
		  <!-- /.row -->
			 <div class="page-wrapper">
            <div class="container-fluid">
							
                <div class="row">
                    <div class="col-lg-6">
                        <h2>Sensor list</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
														<thead>
																<tr>
																		<th>Id</th>
																		<th>Name</th>
																		<th>Type</th>
																		<th>Actions</th>
																		<th>link to chart</th>
																</tr>
														</thead>
														<tbody>
														{% for sensor in sensors %}
																<tr>
																		<td><a href="{{ path('sensor_show', { 'id': sensor.id }) }}">{{ sensor.id }}</a></td>
																		<td>{{ sensor.name }}</td>
																		<td>{{ sensor.type }}</td>
																	
																		<td>
																				<ul>
																				    <li>
																				        <a href="{{ path('sensor_show', { 'id': sensor.id }) }}">show</a>
																				    </li>
																				    <li>
																				        <a href="{{ path('sensor_edit', { 'id': sensor.id }) }}">edit</a>
																				    </li>
																				</ul>
																		</td>
																		<td>
																				{% if sensor.type == 'SpO2'%}
															<a href="/graph/chart/{{sensor.id}}/spo2">SpO2 chart</a>
																				{% elseif sensor.type == 'Accelerometer'%}
															<a href="/graph/chart/{{sensor.id}}/movegraph">Movement chart</a>
																				{% endif %}
																		</td>
																</tr>
														{% endfor %}
														</tbody>
												</table>
                        </div>
                    </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
			  

    

    <ul>
        <li>
            <a href="{{ path('sensor_new') }}">Create a new entry</a>
        </li>
    </ul>
	
		
</div>

<!-- /#page-wrapper -->
{% endblock %}
