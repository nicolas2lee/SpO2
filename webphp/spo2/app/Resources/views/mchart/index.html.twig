{% extends 'layout/layout.html.twig' %}
{% block title %} Chart | Index{% endblock %}

{% block main_body %}
<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>


<div class="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    MoveChart
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> moveChart
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
 				<div><h2>Sensor Infomation</h2>
				{{sensor.name}}
	
				</div>
 	  		<div id="container" style="width: 1000px; height: 600px; margin: 0 auto">

				</div>
	  </div>

</div>

<script type="text/javascript">
var nbSteps=[];
var AEE=[];
var TEE=[];
var MET=[];
var VMU=[];
function seprateData(){
	
	{% for mov  in movements %}
			nbSteps.push({{mov.nbSteps}})
			AEE.push({{mov.AEE}})
			TEE.push({{mov.TEE}})
			MET.push({{mov.MET}})
	{% endfor %}

}

$(function () {
		seprateData();
    $('#container').highcharts({
        title: {
            text: 'Movement chart',
            x: -20 //center
        },
        
        xAxis: {
            plotBands: [{ // visualize the class
                from: 0.0,
                to: 4.5,
                color: 'rgba(255, 182, 193, .2)'
            },{
								from: 4.5,
                to: 6.5,
                color: 'rgba(68, 170, 213, .2)'
						},{
								from: 6.5,
                to: 9.5,
                color: 'rgba(134, 255, 192, .2)'
						},{
								from: 9.5,
                to: 12.5,
                color: 'rgba(255, 255, 0, .2)'
						}],

        },
        yAxis: {
            title: {
                text: 'movement'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valueSuffix: 'Â°C'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [{
            name: 'Steps',
            data: nbSteps
        }, {
            name: 'AEE',
            data: AEE
        }, {
            name: 'TEE',
            data: TEE
        }, {
            name: 'MET',
            data: MET
        },{
            name: 'VMU',
            data: VMU
        }]
    });
});

</script>
{% endblock %}


