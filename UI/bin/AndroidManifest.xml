<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ensta.bretagne.healthdetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ensta.bretagne.healthdetector.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="ensta.bretagne.healthdetector.GUI"
            android:label="@string/title_activity_gui" >
        </activity>
        
        <activity
            android:name="ensta.bretagne.healthdetector.detector"
            android:label="@string/detector" >
        </activity>
        
        <activity
            android:name="ensta.bretagne.healthdetector.telephone"
            android:label="@string/tel" >
        </activity>
                
        <activity
            android:name="ensta.bretagne.healthdetector.history"
            android:label="@string/his" >
        </activity>
    </application>

</manifest>